<%- include('../partials/header') %>

<section class="wrapper">

  <div class="sign-form input">
    <form action="/signs" method="POST">
            <p>Select Sign:</p>
            <select name="sign">
                <option value="Aquarius">Aquarius</option>
                <option value="Pisces">Pisces</option>
                <option value="Aries">Aries</option>
                <option value="Taurus">Taurus</option>
                <option value="Gemini">Gemini</option>
                <option value="Cancer">Cancer</option>
                <option value="Leo">Leo</option>
                <option value="Virgo">Virgo</option>
                <option value="Libra">Libra</option>
                <option value="Scorpio">Scorpio</option>
                <option value="Sagittarius">Sagittarius</option>
                <option value="Capricorn">Capricorn</option>
              </select> 
              <br>
              <br>
            <textarea class="form-control" name="content" style="width: 18rem;" id="exampleFormControlTextarea1" placeholder="Say something nice!" rows="3"></textarea>
            </div>
            <div class="form-group input">
              <label for="exampleFormControlSelect1">Rating</label>
              <select style="width: 18rem;" class="form-control" name="rating" id="exampleFormControlSelect1">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
              </select>
            </div>
            <input type="text" hidden name="reviewer" value="<%= user.name %>">
            <input type="text" hidden name="reviewerPhoto" value="<%= user.avatar %>"> 
            <button class="btn btn-info">Submit</button>
          </form>
</section>
          </div>
    <section class="wrapper">
    <% if (!signs.length) {%> 

        <p>There are no reviews!</p>
        <% } else {%> 
    <% signs.forEach((sign) => {%> 
      <div>Sign: <%= sign.sign %> </div>
      <div>Rating: <%= sign.rating %>  </div>
      <div>Comment: <%= sign.content %>  </div>
      <br>
      <form action="/signs/<%= sign._id %>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-info">Delete</button>
          <hr>
      </form>
      <% }) %> 
      <% } %> 
    </section>

    
    <%- include('../partials/footer') %>