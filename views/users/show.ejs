<%- include('../partials/header') %>

<h3><%= user.name %></h3>

  <div class="card">
    <h5 class="card-title"><%= userInfo.name %></h5>

    <p class="card-text">Email: <a href="mailto:<%= userInfo.email %>"><%= userInfo.email %></a></p>

    <p class="card-text">Sun Sign: <%= userInfo.sunsign %></p>
    
    <% if (!userInfo._id.equals(user._id) && !user.friends.includes(userInfo._id)) { %>
      <a href="/users/<%= userInfo._id %>/friend" class="btn btn-primary">Add Match</a>
    <% } %>
    <% if (!userInfo._id.equals(user._id) && user.friends.includes(userInfo._id)) { %>
      <a href="/users/<%= userInfo._id %>/unfriend" class="btn btn-primary">Remove Match</a>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>