<%- include('../partials/header') %>

<div class="card">

    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="profileinfo" role="tabpanel" aria-labelledby="profileinfo-tab">
        <div class="card-body">
          <h2 class="card-title"><%= user.name %></h2>
          <a href="/users/<%= user._id %>/edit">Edit Profile</a>
          <a href="/matches">View Matches</a>
          <a href="/signs/<%= user._id %>/edit">Review Signs</a>
          <hr>

          <p class="card-text">Email: <%= user.email %></p>

          <form action="/users/profile?_method=DELETE" method="POST"></form>
          <p class="card-text">Status: <%= user.status %></p>
          <button type="submit">Clear Status</button>
        </form>

          <p class="card-text">Sun Sign: <%= user.sunSign %></p>
          <p class="card-text">Moon Sign: <%= user.moonSign %></p>
          <p class="card-text">Asc Sign: <%= user.ascSign %></p>

        </div>
      </div>
    </div>
  </div>


<%- include('../partials/footer') %>
